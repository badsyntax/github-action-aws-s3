{
  "name": "github-action-aws-cloudformation",
  "version": "0.0.0",
  "private": true,
  "description": "A GitHub Action to create/update your CloudFormation stack",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write '**/*.{ts,json,svg,md,yml}'",
    "format-check": "prettier --check '**/*.{ts,json,svg,md,yml}'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build lib/main.js --source-map --license licenses.txt",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badsyntax/github-action-aws-cloudformation.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "aws",
    "cloudfront"
  ],
  "author": "Richard Willis <willis.rh@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@aws-sdk/client-s3": "^3.44.0",
    "mime-types": "^2.1.34",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/mime-types": "^2.1.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^17.0.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vercel/ncc": "^0.33.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.5",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.4"
  }
}
